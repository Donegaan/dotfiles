[init]
	templatedir = ~/.git-templates

[user]
	name = Andrew D
	email = 24252685+Donegaan@users.noreply.github.com
	
[alias]
  migrations = "!f() { git diff --name-only $1..$2 db/migrate | tr -d '[A-Za-z/_.]'; }; f"

[submodule]
	recurse = true
	
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	
[pull]
	rebase = true
	
[rebase]
	autoStash = true
	
[core]
	editor = lvim 
  pager = delta

[interactive]
  diffFilter = delta --color-only
  line-numbers = false

[include]
  path = ~/dotfiles/git/tokyonight_moon.gitconfig

[delta]
  features = side-by-side navigate
  syntax-theme = tokyonight_moon

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
