[init]
	templatedir = ~/.git-templates

[user]
	name = Andrew D
	email = 24252685+Donegaan@users.noreply.github.com
[submodule]
	recurse = true
	
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	
[pull]
	rebase = true
	
[rebase]
	autoStash = true
	
[core]
	editor = lvim 
  pager = delta

[interactive]
  diffFilter = delta --color-only
  light = true      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
  side-by-side = true
  line-numbers = true

[delta]
  features = side-by-side line-numbers navigate
  syntax-theme = Monokai Extended

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
